<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/weather_anim"
        android:layout_width="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animation_cloudy2"
        android:layout_height="100dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_city_name"
        android:layout_width="wrap_content"
        android:text="Tabriz"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/weather_anim"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptation"
        android:layout_width="wrap_content"
        android:text="Cloudy"
        app:layout_constraintTop_toBottomOf="@+id/textview_city_name"
        app:layout_constraintStart_toEndOf="@id/weather_anim"
        android:layout_marginStart="28dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_city"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_city_name"
        app:layout_constraintTop_toBottomOf="@id/weather_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Enter A city name:"
        android:textSize="16sp"
        android:padding="14dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:id="@+id/search_button"
        android:elevation="8dp"
        android:background="@drawable/magnify"
        app:layout_constraintTop_toBottomOf="@id/edittext_city"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="40dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:id="@+id/title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_button"
        android:layout_margin="20dp"
        android:background="@drawable/weather_inf"
        android:layout_height="180dp">
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titilehumedity"
            android:layout_width="match_parent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/humedity_anim"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animation_humedelty"
            android:layout_height="70dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/humeditytext"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/humedity_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/titilehumedity"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:id="@+id/t2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_button"
        android:layout_margin="20dp"
        android:background="@drawable/weather_inf"
        android:layout_height="180dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/t2_titiel"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/t2_anim"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animation_wind"
            android:layout_height="70dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textwind"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/t2_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/t2_titiel"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="180dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title1"
    android:layout_margin="20dp"
    android:background="@drawable/weather_inf"
    android:layout_height="180dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/t3_titile"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/t3_anim"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animation_temp"
        android:layout_height="70dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deg"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/t3_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/t3_titile"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        app:layout_constraintTop_toBottomOf="@id/t2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/weather_inf"
        android:layout_height="180dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/t4_titile"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/t4_anim"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animation_temptmin"
            android:layout_height="70dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mintemptext"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/t4_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/t4_titile"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>